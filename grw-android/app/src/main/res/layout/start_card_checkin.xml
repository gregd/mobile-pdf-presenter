<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/db_card_checkin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/db_checkin_visits_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Wizyty w sumie 3h 25m" />

        <TextView
            android:id="@+id/db_checkin_avg_per_visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/db_checkin_visits_time"
            android:layout_marginTop="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Śr. na wizytę odbytą 15m"
            android:visibility="gone" />

        <Button
            android:id="@+id/db_checkin_checkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/db_checkin_avg_per_visit"
            android:layout_alignParentLeft="true"
            android:text="@string/db_checkin_checkin"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/db_checkin_locations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/db_checkin_avg_per_visit"
            android:layout_toRightOf="@+id/db_checkin_checkin"
            android:layout_alignParentRight="true"
            android:text="@string/db_checkin_locations"
            style="?android:attr/borderlessButtonStyle" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

        