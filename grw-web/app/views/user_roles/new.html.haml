.row
  .col-md-5
    .panel.panel-flat
      .panel-heading
        %h6.panel-title
          - if @user_role.new_record?
            Nowa rola (przypisanie pracownika do stanowiska)
          - else
            Edycja roli (przypisanie pracownika do stanowiska)
      .panel-body
        = form_for(@user_role) do |f|
          = rw_hidden_back_url
          = app_error_messages(f.object)
          = rwf_select f, :user_id, @users, { include_blank: true }
          = rwf_select f, :app_role_id, @app_roles, { include_blank: true }
          = rwf_select f, :emp_position_id, @emps, { include_blank: true }
          - if @areas.size > 0
            = rwf_select f, :geo_area_id, @areas, { include_blank: true }
          .text-right
            = link_to "Anuluj", redirect_back_url, class: "rwc-RedirectBack btn btn-link"
            = f.submit "Zapisz", class: "btn btn-primary"
