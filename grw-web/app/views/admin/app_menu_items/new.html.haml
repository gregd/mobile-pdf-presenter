.row
  .col-md-6
    .panel.panel-flat
      .panel-heading
        %h6.panel-title
          - if @item.new_record?
            New menu item
          - else
            Edit menu item
      .panel-body
        = form_for([:admin, @item]) do |f|
          = rw_hidden_back_url
          = app_error_messages(f.object)
          = rwf_text_field f, :parent_id
          = rwf_text_field f, :position
          = rwf_text_field f, :level
          = rwf_field f, :grouped_collection_select, :app_action_group_id, @action_groups, :app_action_groups, :name, :id, :name,
                { include_blank: true }, { class: "form-control" }
          = rwf_check_box  f, :visible
          = rwf_text_field f, :name
          = rwf_text_field f, :controller
          = rwf_text_field f, :action
          = rwf_text_field f, :icon_name
          = rwf_text_field f, :app_stat_group_id
          = rwf_text_field f, :stat_name
          .text-right
            = f.submit class: "btn btn-primary"
