.row
  .col-md-6
    .panel.panel-flat
      .panel-heading
        %h6.panel-title
          - if @module.new_record?
            New module
          - else
            Edit module
      .panel-body
        = form_for([:admin, @module]) do |f|
          = rw_hidden_back_url
          = app_error_messages(f.object)
          = rwf_text_field f, :position
          = rwf_text_field f, :name
          .text-right
            = f.submit class: "btn btn-primary"
