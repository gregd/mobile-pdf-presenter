.row
  .col-md-12
    .panel.panel-flat
      .panel-heading
        %h6.panel-title Lista produktów
        .heading-elements.not-collapsible
          %ul.list-inline.heading-text
            %li
              = link_to "Dodaj nowy produkt", new_activity_product_path
      %table.table.table-striped
        %tr
          %th Grupa
          %th Produkt
          %th Opis
          %th Użyty razy
          %th
        - cur = nil
        - @products.each do |t|
          %tr
            %td
              - if t.activity_product_group_id != cur
                - cur = t.activity_product_group_id
                = t.activity_product_group.name
            %td
              = t.presenter.view_as_label
            %td
              = t.name
            %td
              TODO
            %td
              %ul.icons-list
                %li.dropdown
                  %a(href="#" class="dropdown-toggle" data-toggle="dropdown")
                    %i.icon-menu9
                  %ul.dropdown-menu.dropdown-menu-right
                    %li.dropdown-header
                      Akcje
                    %li
                      = link_to "Edycja", edit_activity_product_path(t)
